.app/","children":[{"type":"text","value":"SWR","position":{"start":{"line":8,"column":232,"offset":642},"end":{"line":8,"column":235,"offset":645}}}],"position":{"start":{"line":8,"column":231,"offset":641},"end":{"line":8,"column":261,"offset":671}}},{"type":"text","value":").","position":{"start":{"line":8,"column":261,"offset":671},"end":{"line":8,"column":263,"offset":673}}}],"position":{"start":{"line":8,"column":3,"offset":413},"end":{"line":8,"column":263,"offset":673}}}],"position":{"start":{"line":8,"column":1,"offset":411},"end":{"line":8,"column":263,"offset":673}}}],"position":{"start":{"line":7,"column":1,"offset":301},"end":{"line":8,"column":263,"offset":673}}},{"type":"paragraph","children":[{"type":"text","value":"If you'd like to learn more about ChtiJS, ","position":{"start":{"line":10,"column":1,"offset":675},"end":{"line":10,"column":43,"offset":717}}},{"type":"link","title":null,"url":"https://chtijs.francejs.org/","children":[{"type":"text","value":"take a look at their website","position":{"start":{"line":10,"column":44,"offset":718},"end":{"line":10,"column":72,"offset":746}}}],"position":{"start":{"line":10,"column":43,"offset":717},"end":{"line":10,"column":103,"offset":777}}},{"type":"text","value":".","position":{"start":{"line":10,"column":103,"offset":777},"end":{"line":10,"column":104,"offset":778}}}],"position":{"start":{"line":10,"column":1,"offset":675},"end":{"line":10,"column":104,"offset":778}}}],"position":{"start":{"line":1,"column":1,"offset":0},"end":{"line":11,"column":1,"offset":779}}}}],"pagesCount":1,"page":1},"__N_SSG":true}